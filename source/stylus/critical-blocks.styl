.l-container
	max-width 500px
	width 100%
	margin 0 auto
	position relative
	height 100%
	padding 0 25px
	
.l-content-container
	display flex
	flex-direction column
	min-height 100vh
	align-items center
	justify-content center
	
	
.b-carousel-nav
	margin-bottom 24px
	font-size 0
	&:last-child
		margin-bottom 0
	.b-carousel-btn
		margin-right 24px
		&:last-child
			margin-right 0		
		
.b-carousel-btn
	display inline-flex
	align-items center
	height 48px
	font-size 16px
	border-radius 4px
	padding 0 24px
	background-color #66CCFF